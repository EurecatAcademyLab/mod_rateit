<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/rateit/db" VERSION="20230217" COMMENT="XMLDB file for Moodle mod_rateit"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="rateit" COMMENT="Stores the rateit activity module instances.">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false" COMMENT="ID of the course this activity is part of."/>
        <FIELD NAME="name" TYPE="char" LENGTH="255" NOTNULL="true" SEQUENCE="false" COMMENT="The name of the activity module instance"/>
        <FIELD NAME="intro" TYPE="text" NOTNULL="false" SEQUENCE="false" COMMENT="Activity description."/>
        <FIELD NAME="introformat" TYPE="int" LENGTH="4" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="The format of the intro field."/>
        <FIELD NAME="optionone" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="1" SEQUENCE="false"/>
        <FIELD NAME="optiontwo" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="2" SEQUENCE="false"/>
        <FIELD NAME="optionthree" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="3" SEQUENCE="false"/>
        <FIELD NAME="optionfour" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="4" SEQUENCE="false"/>
        <FIELD NAME="optionfive" TYPE="char" LENGTH="50" NOTNULL="true" DEFAULT="5" SEQUENCE="false"/>
        <FIELD NAME="question_name" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="anonymous_survey" TYPE="int" LENGTH="12" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="toleft" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="completionsubmit" TYPE="int" LENGTH="1" NOTNULL="false" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Timestamp of when the instance was added to the course."/>
        <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" SEQUENCE="false" COMMENT="Timestamp of when the instance was last modified."/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
        <KEY NAME="fk_course" TYPE="foreign" FIELDS="course" REFTABLE="course" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="rateit_users" COMMENT="To save the users ratings">
      <FIELDS>
        <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="true"/>
        <FIELD NAME="course_id" TYPE="int" LENGTH="10" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="user_id" TYPE="char" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="previous_id" TYPE="int" LENGTH="12" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="rating" TYPE="int" LENGTH="12" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="comments" TYPE="text" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="actual_id" TYPE="int" LENGTH="12" NOTNULL="false" SEQUENCE="false"/>
        <FIELD NAME="anonim" TYPE="int" LENGTH="12" NOTNULL="true" DEFAULT="0" SEQUENCE="false"/>
        <FIELD NAME="timecreated" TYPE="int" LENGTH="20" NOTNULL="false" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
